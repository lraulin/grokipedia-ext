{
  "manifest_version": 3,
  "name": "Grokipedia Redirect",
  "version": "1.0.0",
  "description": "Automatically redirects Wikipedia links to Grokipedia",
  "permissions": [
    "webNavigation"
  ],
  "host_permissions": [
    "*://*.wikipedia.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
